<% if params[:tag] %>
  <p>Results for <strong>#<%= params[:tag] %></strong></p>
<% end %>

<div class="row">
  <div class="span6">
	<% if @questions.any? %>
	  <h3>Recent Questions</h3>
	  <ol class="questions">
	    <%= render @questions, user: true %>
	  </ol>
	  <%= will_paginate @questions %>
	<% end %>
  </div>
  <div class="span6">
	<% if @users.any? %>
	  <h3>Reputation Rankings</h3>
	  <ol class="users">
	    <%= render @users %>
	  </ol>
	  <%= will_paginate @users %>
	<% end %>
  </div>
</div>
<% provide(:title, @question.title) %>
<h1><%= @question.title %></h1>

<div class="row">
  <div class="span">
	<p><%= simple_format(@question.content) %></p>
	<p>
		<%= link_to @question.user.name, @question.user %> 
		asked <%= time_ago_in_words(@question.created_at) %> ago.
	</p>
  </div>
</div>
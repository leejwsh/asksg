<% provide(:title, "Ask") %>
<h1>Ask A Question</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@question) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>

      <%= f.text_field :title, placeholder: "Subject" %>

      <%= f.text_area :content, placeholder: "Ask a question..." %>

      <%= f.text_field :tag_list, placeholder: "Hashtags" %>

      <%= f.submit "Ask!", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>
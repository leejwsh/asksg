<% provide(:title, @user.name) %>
<h1><%= @user.name %></h1>

<div class="row">
  <div class="span8">
	<% if @user.questions.any? %>
	  <h3>Questions (<%= @user.questions.count %>)</h3>
	  <ol class="questions">
	    <%= render @questions %>
	  </ol>
	  <%= will_paginate @questions %>
	<% end %>
  </div>
</div>
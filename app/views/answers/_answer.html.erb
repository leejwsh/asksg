<li>
  <span class="content">
  	<% if defined? title %>
  	  <%= link_to answer.question.title, answer.question %>
  	<% end %>  
  	<% if defined? content %>
  	  <%= simple_format(answer.content) %>
  	<% end %>  
  </span>
  <span class="timestamp">
    <%= link_to answer.user.name, answer.user %> 
	answered <%= time_ago_in_words(answer.created_at) %> ago.
  </span>
</li>